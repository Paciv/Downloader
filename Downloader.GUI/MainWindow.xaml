<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button Name="Start" Click="Start_Click">
                    Start
                    <!--<Image Source="Images/Start.ico" Height="20" Width="20" />-->
                </Button>
                <Button Name="Stop" Click="Stop_Click">
                    Stop
                    <!--<Image Source="Images/Stop.ico" Height="20" Width="20" />-->
                </Button>
                <Button Name="Up" Click="Up_Click">Up</Button>
                <Button Name="Down" Click="Down_Click">Down</Button>
                <TextBox Name="Url" MinWidth="300" MaxWidth="300">http://www.asia-choc.biz/rich-man-poor-woman-ddl-vostfr-drama-japonais-11sp/</TextBox>
                <Button Name="ExploreUrl" Click="ExploreUrl_Click">ExploreUrl</Button>
            </StackPanel>
            <DataGrid Name="Grid" ItemsSource="{Binding Downloads}" />
        </StackPanel>
    </Grid>
</Window>
